<style>

      .form-signin {
        max-width: 300px;
        padding: 19px 29px 29px;
        margin: 0 auto 20px;
        background-color: #fff;
        border: 1px solid #e5e5e5;
        -webkit-border-radius: 5px;
           -moz-border-radius: 5px;
                border-radius: 5px;
        -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
           -moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
                box-shadow: 0 1px 2px rgba(0,0,0,.05);
      }
      .form-signin .form-signin-heading,
      .form-signin .checkbox {
        margin-bottom: 10px;
      }
      .form-signin input[type="text"],
      .form-signin input[type="password"] {
        font-size: 16px;
        height: auto;
        margin-bottom: 15px;
        padding: 7px 9px;
      }
h2{
	font-family: 'Norican', cursive;
  color:#BB766F;
}
body{
	color: #989898;

}
a{
	color: #BB766F;
}
    
</style>
<div class="container">
	<%= simple_form_for(resource, :as => resource_name, :html => {:class => "form-signin"}, :url => session_path(resource_name)) do |f| %>
	<h2 class="form-signin-heading">Iniciar Sesión</h2>
		<%= f.input :email, label: 'Correo Electronico', :required => false, :autofocus => true,  :input_html => { :class => "input-block-level" } %>
		<%= f.input :password, label: 'Contraseña', :required => false, :input_html => { :class => "input-block-level" } %>
		 <label class="checkbox">
          <%= f.input :remember_me, label: 'Recordar',  :as => :boolean if devise_mapping.rememberable? %>
        </label>		
		<%= f.button :submit, "Iniciar", :class => "btn btn-large btn-danger" %>
		<div>
			<%= render "devise/shared/links" %>
		</div>
			
	<% end %>

</div> <!-- /container -->
